//http://www.processing.org/learning/examples/distance2d.html

var max_distance=0;

function setup() {
  size(200, 200); 
  rectMode("CENTER");  
  noStroke();
  max_distance = dist(0, 0, width, height);
}

function draw() 
{
  background(51);

  for(var i=20; i<width; i+=20) {
    for(var j=20; j<width; j+=20) {
      var size = dist(mouseX, mouseY, i, j);
      size = size/max_distance * 66;
      rect(i, j, size, size);
    }
  }
}